.chat-side
    .side-header
        .side-header-box
            %p.name 
                = current_user.name
            %ul.icon 
                %li.icon1 
                    = link_to new_group_path do
                        = icon('fas' ,'edit')
                %li.icon2
                    = link_to edit_user_path(current_user.id) do
                        = icon('fas' ,'cog')
    .groups 
        - current_user.groups.each do |group| 
            .group
                = link_to group_messages_path(group), class: 'group' do
                    .group__name
                    = group.name
                    .group__message
                    = group.show_last_message
      
            
    
